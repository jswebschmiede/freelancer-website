---
import { Image } from 'astro:assets';
import { twMerge } from 'tailwind-merge';

const { title, className, image, href } = Astro.props;
---

{
	href ? (
		<a
			href={href}
			class={twMerge(
				'card border-2 border-white/5 bg-base-100/60 shadow-xl backdrop-blur transition-all duration-300 will-change-transform hover:-translate-y-2 hover:shadow-2xl',
				className
			)}
		>
			{image && (
				<figure>
					<Image src={image} class="card-image" alt={title} />
				</figure>
			)}
			<div class="card-body">
				<h2 class="card-title">{title}</h2>
				<slot />
			</div>
		</a>
	) : (
		<div
			class={twMerge(
				'card border-2 border-white/5 bg-base-100/60 shadow-xl backdrop-blur transition-all duration-300 will-change-transform hover:-translate-y-2 hover:shadow-2xl',
				className
			)}
		>
			{image && (
				<figure>
					<Image src={image} class="card-image" alt={title} />
				</figure>
			)}
			<div class="card-body">
				<h2 class="card-title">{title}</h2>
				<slot />
			</div>
		</div>
	)
}
