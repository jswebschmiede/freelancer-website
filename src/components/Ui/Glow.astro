---
import { twMerge } from 'tailwind-merge';

const { className } = Astro.props;
---

<div
  class:list={twMerge(
    'pointer-events-none absolute -top-40 left-0 -z-10 h-[600px] w-[600px] origin-center animate-glow-pulse select-none rounded-full bg-[radial-gradient(680px_at_center,rgba(0,144,181,0.1),transparent_100%)] blur-[140px] md:-left-28',
    className
  )}
>
</div>
