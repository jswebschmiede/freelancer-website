---
import { SITE } from '../../config';

const { footerLinks } = SITE;
---

<div class="bg-base-200/60 backdrop-blur mt-24 border-white/5 border-t-2"></div>
<footer class="justify-between items-center mx-auto p-10 max-w-screen-xl text-lg footer">
	<aside>
		<p class="mb-4 md:mb-0 font-bold md:text-left text-center">
			Built with <span class="px-1 text-primary text-2xl">♡</span>
			by&nbsp;Jörg Schöneburg
		</p>
	</aside>
	<nav class="gap-6 grid grid-flow-col">
		<a
			class="flex items-center gap-2 link-hover link"
			href="https://github.com/jswebschmiede"
			target="_blank"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="feather feather-github"
				><path
					d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
				></path></svg
			>
			<span>Github</span>
		</a>
		{
			footerLinks.map((item) => (
				<a class="link-hover link" href={item.href}>
					{item.name}
				</a>
			))
		}
	</nav>
</footer>
