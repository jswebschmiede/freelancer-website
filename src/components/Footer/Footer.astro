---
import { SITE } from '../../config';

const { footerLinks } = SITE;
---

<div class="border-t-2 border-white/5 bg-base-200/60 backdrop-blur"></div>
<footer class="footer mx-auto max-w-screen-xl items-center p-10 text-lg md:justify-between">
	<aside class="order-last w-full md:order-first">
		<p class="mb-4 w-full text-center font-bold md:mb-0 md:text-left">
			Built with <span class="px-1 text-2xl text-primary">♡</span>
			by&nbsp;Jörg Schöneburg
		</p>
	</aside>
	<nav class="grid w-full grid-cols-1 place-items-center gap-6 md:grid-flow-col">
		<a
			class="link-hover link flex items-center gap-2"
			href="https://github.com/jswebschmiede"
			target="_blank"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="feather feather-github"
				><path
					d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
				></path></svg
			>
			<span>Github</span>
		</a>
		{
			footerLinks.map((item) => (
				<a class="link-hover link" href={item.href}>
					{item.name}
				</a>
			))
		}
	</nav>
</footer>
