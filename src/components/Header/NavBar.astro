---
import { SITE } from 'src/config';
import Button from '@components/Ui/Button.astro';

const navLinks = SITE.links;
---

<div
	class="h-[--fixed-header-height] mx-auto px-4 border-b border-b-white/0 max-w-screen-xl navbar"
>
	<div class="opacity-100 translate-x-0 navbar-start">
		<a
			class="flex justify-center items-center shadow-2xl btn-outline lg:w-16 lg:h-16 aspect-1 font-bold text-xl lg:text-4xl btn btn-circle btn-primary"
			href="/"
		>
			JS
		</a>
	</div>
	<div class="hidden lg:flex navbar-center">
		<ul class="items-center gap-8 border border-transparent rounded-btn menu menu-horizontal">
			{
				navLinks.map((item) => (
					<li>
						<a class="inline-flex flex-nowrap py-0 text-base btn btn-ghost" href={item.href}>
							{item.name}
						</a>
					</li>
				))
			}
		</ul>
	</div>
	<div class="navbar-end">
		<div class="dropdown dropdown-end">
			<div tabindex="0" role="button" class="lg:hidden btn btn-ghost">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="w-6 h-6"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M4 6h16M4 12h8m-8 6h16"></path>
				</svg>
			</div>
			<ul
				class="z-[1] items-start bg-base-100 shadow-lg mt-3 rounded-box w-52 menu dropdown-content menu-sm"
				tabindex="0"
			>
				{
					navLinks.map((item) => (
						<li class="flex w-full">
							<a
								class="inline-flex flex-nowrap justify-start py-0 w-full text-base text-left btn btn-ghost"
								href={item.href}
							>
								{item.name}
							</a>
						</li>
					))
				}
			</ul>
		</div>
		<div class="hidden lg:block">
			<Button href="#kontakt" variant="outline"> Kontakt </Button>
		</div>
	</div>
</div>

<script>
	const navbar = document.querySelector('.navbar');
	window.addEventListener('scroll', () => {
		if (window.scrollY > 50) {
			navbar.classList.add('sticky-navbar');
		} else {
			navbar.classList.remove('sticky-navbar');
		}
	});
</script>
