---
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';
import '@fontsource/poppins/800.css';
import '@fontsource/poppins/900.css';
import { SITE } from '../config';
import type { MetaSEO } from '../types';
import '../styles/global.css';
import MetaTags from '@components/MetaTags.astro';
import BasicScripts from '@components/BasicScripts.astro';
import ProgressToTopButton from '@components/Ui/ProgressToTopButton.astro';
import Preloader from '@components/Ui/Preloader.astro';

export interface Props {
	meta?: MetaSEO;
	bodyClass?: string;
}

const { meta = {}, bodyClass = 'site' } = Astro.props;
const { textDirection = 'ltr', lang = 'en' } = SITE;
---

<!doctype html>
<html
	lang={lang}
	dir={textDirection}
	class="scrollbar-rounded-lg min-h-full scroll-smooth scrollbar-thin scrollbar-thumb-rounded"
	data-theme="dark"
>
	<head>
		<MetaTags {...meta} />
	</head>
	<body class:list={['flex h-full flex-col font-sans antialiased', bodyClass]}>
		<div class="overflow-clip">
			<slot />
			<ProgressToTopButton />
			<Preloader />
		</div>

		<BasicScripts />
	</body>
</html>
