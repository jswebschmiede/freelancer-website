---
import Header from '@components/Header/Header.astro';
import Footer from '@components/Footer/Footer.astro';
import Layout from '@layouts/BaseLayout.astro';

const { meta, bodyClass } = Astro.props;
---

<Layout {meta} {bodyClass}>
	<div class="circuit-pattern bg-base-100 pt-[--fixed-header-height]">
		<div
			class="mask-radial pointer-events-none absolute inset-0 flex items-center justify-center bg-base-100"
		>
		</div>
		<slot name="header">
			<Header />
		</slot>

		<slot name="hero" />
	</div>

	<main class="main-content" id="main-content">
		<slot />
	</main>

	<slot name="footer">
		<Footer />
	</slot>
</Layout>
